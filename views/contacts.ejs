<% include header %>

<div class="container">
    
<% contact.forEach(function(contact){ %>
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>What</td>
                <th>Info</td>
            </tr>
        </thead>
        <tr>
            <td>Email</td>
            <td><%=contact.email%></td>
        </tr>
        <tr>
            <td>Phone</td>
            <td><%=contact.phone%></td>
        </tr>
        <tr>
            <td>Message</td>
            <td><%=contact.message%></td>
        </tr>
        <tr>
            <td>License checkbox</td>
            <td><%=contact.license%></td>
        </tr>
        <tr>
            <td>Contact Preference</td>
            <td><%=contact.contactType%></td>
        </tr>
        <tr>
            <td>Submitted</td>
            <td><%=contact.created%></td>
        </tr>
        <tr>
            <td>Contacted</td>
            <td><%=contact.contacted%></td>
        </tr>
        <!-- <tr>
            <td>Id</td>
            <td><%=contact._id%></td>
        </tr> -->
        <tr>
            <td>My Notes</td>
            <td><%=contact.danielnotes%></td>
        </tr>
    </table>
<div>

    <form  action="/contact/<%=contact._id %>/contacted?_method=PUT" method="POST">
        <textarea name="danielnotes" class="form-control" rows=3 cols=50></textarea><br>
        <div class="form-check mb-2">
                <input class="form-check-input" name="contactedThePerson" type="checkbox" id="contactedThePerson">
                <label class="form-check-label" for="driverslicense">  
                    I reached out to this person
                </label>
              </div>
        <input class="btn btn-lg btn-primary" type="submit">
    </form>
    <br>
    <form action="/contact/<%=contact._id%>?_method=DELETE" method="POST">
        <button class="btn btn-sm btn-danger">Delete</button>
    </form>
</div>
    <br>
<%}) %>

</div>
<% include footer %>
